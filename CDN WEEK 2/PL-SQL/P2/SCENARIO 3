CREATE OR REPLACE PROCEDURE AddNewCustomer (
    p_CustomerID IN Customers.CustomerID%TYPE,
    p_Name IN Customers.Name%TYPE,
    p_DOB IN Customers.DOB%TYPE,
    p_Balance IN Customers.Balance%TYPE
) AS
BEGIN
    -- Attempt to insert the new customer
    INSERT INTO Customers (CustomerID, Name, DOB, Balance, LastModified)
    VALUES (p_CustomerID, p_Name, p_DOB, p_Balance, SYSDATE);

    COMMIT;
EXCEPTION
    WHEN DUP_VAL_ON_INDEX THEN
        -- Log the error for duplicate customer ID
        INSERT INTO ErrorLog (LogID, LogMessage, LogDate) 
        VALUES (seq_errorlog.NEXTVAL, 'Customer ID ' || p_CustomerID || ' already exists.', SYSDATE);
    WHEN OTHERS THEN
        -- Log any other errors
        INSERT INTO ErrorLog (LogID, LogMessage, LogDate) 
        VALUES (seq_errorlog.NEXTVAL, SQLERRM, SYSDATE);
        ROLLBACK;
        RAISE;
END AddNewCustomer;
